{
  "name": "DingTalk-App-CLI",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "version": "0.0.0",
  "scripts": {
    "changelog": "lerna-changelog",
    "commit": "git cz",
    "test": "node scripts/test.js",
    "build": "node scripts/build.js",
    "release": "npm run build && node scripts/release.js",
    "version": "node scripts/genChangelog.js && git add CHANGELOG.md",
    "bootstrap": "lerna",
    "lint": "eslint packages --ext .ts",
		"lint:fix": "eslint packages --fix --ext .ts"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.11.0",
    "execa": "^5.0.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "lerna-changelog": "^1.0.1",
    "minimist": "^1.2.5",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": ">=12.15.x"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test",
      "commit-msg": "npx validate-commit-msg"
    }
  },
  "config": {
    "validate-commit-msg": {
      "helpMessage": "\nPlease fix your commit message (and consider using http://npm.im/commitizen)\n",
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert",
        "build",
        "release",
        "custom",
        "ci"
      ],
      "warnOnFail": false,
      "autoFix": true
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
